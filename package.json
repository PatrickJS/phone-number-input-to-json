{
  "name": "phone-number-input-to-json",
  "version": "1.0.0",
  "description": "A library to parse various phone number formats into structured JSON",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && esbuild dist/index.js --bundle --outfile=dist/browser.js --format=iife --global-name=PhoneNumberParser",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "serve . -l 3000",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "phone",
    "number",
    "parser",
    "json",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "serve": "14.2.4",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
